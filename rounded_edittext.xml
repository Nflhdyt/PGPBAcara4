<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#E9EFEC"/> <!-- Abu-abu muda -->

    <!-- Corner radius (to make the edges rounded) -->
    <corners android:radius="12dp"/>

    <!-- Border/stroke color and width (optional, can be removed) -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD"/> <!-- Abu-abu gelap -->

    <!-- Padding inside the EditText -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp"/>
</shape>
